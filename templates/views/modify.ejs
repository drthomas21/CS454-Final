<div class="col-lg-12" ng-controller="WishListCtrl" ng-init="search()">
	<form class="form col-lg-12 center-block">
		<div class="form-group">
			<label>Name:</label>
			<input type="text" class="form-control" ng-model="Model.name" />
		</div>
		<div class="form-group">
			<label>Description:</label>
			<textarea class="form-control" row="3" ng-model="Model.description"></textarea>
		</div>
		<div class="form-group">
			<button class="btn btn-success" ng-click="updateModel()">Update</button>
		</div>
	</form>
</div>